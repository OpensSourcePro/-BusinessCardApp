<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="@dimen/standard_layout_margin"
    android:layout_marginEnd="@dimen/standard_layout_margin"
    android:background="#00000000"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_main_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/standard_layout_margin"
        android:layout_marginTop="@dimen/help_item_top_margin"
        android:layout_marginEnd="@dimen/standard_layout_margin"
        app:cardBackgroundColor="@color/dialogPrimary"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:id="@+id/ll_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/help_item_top_margin"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView

                    android:id="@+id/tv_text_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/standard_layout_margin"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="@dimen/standard_layout_margin"
                    android:text="홍길동"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_text_email"
                    style="@style/TextAppearance.MaterialComponents.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/standard_layout_margin"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="@dimen/standard_layout_margin"
                    android:text="hgd@gmail.com"
                    android:textAlignment="textStart"
                    android:textColor="@color/white"
                    android:textSize="@dimen/body1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_text_univ"
                        style="@style/TextAppearance.MaterialComponents.Body1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="충북대학교"
                        android:textColor="@color/white"
                        android:textSize="@dimen/body1" />

                    <TextView
                        android:id="@+id/tv_text_dept"
                        style="@style/TextAppearance.MaterialComponents.Body1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="전자공학부"
                        android:textColor="@color/white"
                        android:textSize="@dimen/body1" />
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_text_snum"
                    style="@style/TextAppearance.MaterialComponents.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/standard_layout_margin"
                    android:layout_marginEnd="@dimen/standard_layout_margin"
                    android:text="2019033052"
                    android:textAlignment="textStart"
                    android:textColor="@color/white"
                    android:textSize="@dimen/body1" />

                <TextView
                    android:id="@+id/tv_text_desc"
                    style="@style/TextAppearance.MaterialComponents.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/standard_layout_margin"
                    android:layout_marginEnd="@dimen/standard_layout_margin"
                    android:text="임베디드 시스템 엔지니어"
                    android:textAlignment="textStart"
                    android:textColor="@color/white"
                    android:textSize="@dimen/body1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_call"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Send Message"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:paddingEnd="20dp"
                        android:paddingStart="10dp"
                        android:layout_marginBottom = "10dp"
                        app:icon="@drawable/ic_baseline_chat_24"
                        app:iconTint="@color/teal_200"
                        app:iconTintMode="multiply"
                        app:iconSize="20dp"
                        app:rippleColor="@color/dialogPrimary"
                        android:backgroundTint="@color/backgroundGray"
                        android:textSize="@dimen/button_text"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
                        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                        android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
                        android:textColor="@color/dialogPrimaryDark"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        app:cornerRadius="20dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_view_detail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="View Detail"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:paddingEnd="20dp"
                        android:paddingStart="10dp"

                        app:icon="@drawable/baseline_details_24"
                        app:iconTint="@color/dialogPrimaryDark"
                        app:iconTintMode="multiply"
                        app:iconSize="20dp"
                        app:rippleColor="@color/dialogPrimary"
                        android:backgroundTint="@color/backgroundGray"
                        android:textSize="@dimen/button_text"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
                        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                        android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
                        android:textColor="@color/dialogPrimaryDark"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        app:cornerRadius="20dp"/>
                </LinearLayout>



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@android:color/transparent">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_cancel"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height"
                        android:backgroundTint="@color/teal_200"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:padding="10dp"
                        android:text="@string/btn_cancel"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/headline_h6"
                        android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
                        app:cornerRadius="0dp"
                        app:rippleColor="@color/dialogPrimary" />
                </RelativeLayout>
                <!--android:background="@drawable/button_background"-->


            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/rl_image_root"
        android:layout_width="@dimen/help_dialog_size"
        android:layout_height="@dimen/help_dialog_size"
        android:layout_centerHorizontal="true"

        android:background="@drawable/ic_profiles">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_circle_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:padding="5dp"
            android:scaleType="centerCrop" />
    </RelativeLayout>
</RelativeLayout>