<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.OCRActivity">

    <RelativeLayout
        android:id="@+id/imageContainer"
        android:layout_width="370dp"
        android:layout_height="250dp"
        android:background="#ffffff">

        <!--    사진 찍는 버튼    -->
        <Button
            android:id="@+id/takePicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TAKE PICTURE"
            android:textSize="18dp"/>

        <!--    사진 보여주는 이미지뷰    -->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="50dp"/>
        <!--android:src="@drawable/img_kor"-->

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/imageContainer"
        android:clickable="true"
        android:id="@+id/OCRButtonContainer">

        <!--    텍스트 추출 버튼    -->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RUN OCR"
            android:textSize= "18dp"
            android:id="@+id/ocrButton"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/OCRButtonContainer"
        android:layout_marginTop="22dp"
        android:padding="10dp">

        <!--    텍스트 추출 뷰    -->
        <TextView
            android:id="@+id/OCRTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="#fff"
            android:text="이곳에 결과 출력"
            android:textColor="#169cdf"
            android:textSize="20dp" />
    </ScrollView>

</RelativeLayout>